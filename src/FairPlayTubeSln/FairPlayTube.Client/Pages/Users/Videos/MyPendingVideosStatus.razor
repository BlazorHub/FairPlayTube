<h3>My Videos Status</h3>
<Loading IsLoading="IsLoading"></Loading>

@if (this.MyPendingVideosQueue != null && this.MyPendingVideosQueue.Count > 0)
{
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
            @foreach (var singleVideo in this.MyPendingVideosQueue)
            {
                <Card>
                    <CardHeader>@singleVideo.Name</CardHeader>
                    <CardBody>
                        <ul class="list-group">
                            <li>Status: @singleVideo.Status</li>
                            <li>Progress: @singleVideo.ProcessingProgress</li>
                        </ul>
                    </CardBody>
                </Card>
            }
        </div>
    </div>
}
else
{
    <strong>There are no pending videos on your queue</strong>
}