@page "/"

@foreach (var singleController in this.Controllers)
{
    <div class="row">
        <div class="col">
            <h2>@singleController.Name</h2>
        </div>
    </div>
    <ul>
        @foreach (var singleEndpoint in singleController.Endpoints)
        {
            <li>Name: @singleEndpoint.Name - Permission Name: @($"{singleController.Name}.{singleEndpoint.Name}")</li>
        }
    </ul>
}